.signup
  .signup__body
    .signup__body__content
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .signup__body__content__nick
          = f.label :ニックネーム
          %br/
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
        .signup__body__content__mail
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autocomplete: "email"
        .signup__body__content__pass
          = f.label :パスワード
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .signup__body__content__confir
          = f.label :パスワード確認用
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .signup__body__content__birth
          = f.label :生年月日
          %br/
          = f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1989, 1, 1)
        .signup__body__content__sub
          = f.submit "登録"
      = render "devise/shared/links"
